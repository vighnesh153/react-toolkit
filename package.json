{
  "name": "@vighnesh153/react-toolkit",
  "version": "1.2.0",
  "description": "A react component library for my projects",
  "main": "dist/index.js",
  "scripts": {
    "storybook": "start-storybook -p 6006",
    "build": "rm -rf dist && tsc && cp -R src/styles dist/styles",
    "build-storybook": "build-storybook",
    "changelog-story": "./scripts/changelog.sh",
    "start-storybook": "build-storybook && start-storybook -s ./public -p 9001",
    "test": "jest",
    "test:watch": "jest --watch",
    "prettier:fix": "prettier -w ./src/**/*.ts -w ./src/**/*.tsx",
    "lint:fix": "eslint --fix ./src/**/*.ts --fix ./src/**/*.tsx",
    "prepublish": "npm run test && npm run build",
    "release": "npm run test && npm run build && standard-version && npm run changelog-story && git add src/Changelog.stories.mdx && git commit -m \"chore: update changelog-stories.mdx\" && git push --follow-tags"
  },
  "repository": {
    "type": "git",
    "url": "git@vighnesh153:vighnesh153/react-toolkit.git"
  },
  "files": [
    "dist"
  ],
  "author": "Vighnesh Raut",
  "license": "ISC",
  "dependencies": {
    "@material-ui/core": "^4.11.3",
    "react": "^16.14.0",
    "react-dom": "^16.14.0",
    "typescript": "^4.2.4"
  },
  "config": {
    "commitzen": {
      "path": "cz-conventional-changelog"
    }
  },
  "standard-version": {
    "scripts": {
      "postchangelog": "sed -i -- 's,https://vighnesh153//,https://github.com/vighnesh153/react-toolkit,g' CHANGELOG.md"
    }
  },
  "devDependencies": {
    "@babel/core": "^7.13.16",
    "@commitlint/cli": "^12.1.1",
    "@commitlint/config-conventional": "^12.1.1",
    "@storybook/addon-actions": "^6.2.8",
    "@storybook/addon-docs": "^6.2.9",
    "@storybook/addon-essentials": "^6.2.8",
    "@storybook/addon-links": "^6.2.8",
    "@storybook/addons": "^6.2.9",
    "@storybook/react": "^6.2.8",
    "@storybook/theming": "^6.2.9",
    "@testing-library/jest-dom": "^5.12.0",
    "@testing-library/react": "^11.2.6",
    "@types/jest": "^26.0.23",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "babel-loader": "^8.2.2",
    "eslint": "^7.25.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.3.6",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.23.2",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^6.0.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^26.6.3",
    "prettier": "^2.2.1",
    "standard-version": "^9.2.0",
    "ts-jest": "^26.5.5",
    "ts-node": "^9.1.1"
  }
}
